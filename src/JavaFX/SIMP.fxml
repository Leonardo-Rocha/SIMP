<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="504" prefWidth="896" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFX.SIMPController">
    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    <MenuItem onAction="#onNew" text="New" />
                    <MenuItem onAction="#onOpen" text="Open" />
                    <MenuItem onAction="#onSave" text="Save" />
                    <MenuItem onAction="#onSaveAs" text="Save As" />
                    <MenuItem onAction="#onExit" text="Exit" />
                </Menu>
            </MenuBar>

            <ToolBar>
                <HBox alignment="CENTER" spacing="5">
                    <TextField fx:id="brushSize" text="18" />
                    <ColorPicker fx:id="colorPicker" />
                    <ToggleButton fx:id="eraser" stylesheets="@SIMP.css">
                  <HBox.margin>
                     <Insets left="10.0" right="5.0" />
                  </HBox.margin></ToggleButton>
                    <Button fx:id="undo" onAction="#onUndo" stylesheets="@SIMP.css">
                  <HBox.margin>
                     <Insets left="5.0" right="5.0" />
                  </HBox.margin></Button>
                    <Button fx:id="redo" onAction="#onRedo" stylesheets="@SIMP.css">
                  <HBox.margin>
                     <Insets left="5.0" />
                  </HBox.margin></Button>
                </HBox>
            </ToolBar>
        </VBox>
    </top>

    <center>
        <Canvas fx:id="canvas" height="504" width="896" />
    </center>
</BorderPane>
